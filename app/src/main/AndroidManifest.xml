<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lauzy.freedom.dailypaper">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".app.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/activity_no_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ZHThemeItemActivity"
            android:label="@string/activity_no_label"
            android:launchMode="singleTask">
        </activity>

        <meta-data android:name="AA_DB_NAME" android:value="news.db" />
        <meta-data android:name="AA_MODELS" android:value="com.lauzy.freedom.dailypaper.model.CollectionNews" />

    </application>

</manifest>